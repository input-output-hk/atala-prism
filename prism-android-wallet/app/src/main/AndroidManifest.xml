<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.iohk.cvp">

    <uses-permission
        android:name="android.permission.CAMERA"
        tools:ignore="ManifestOrder" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />

    <!-- SPECIAL PERMISSIONS FOR ACUANT SDK -->
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="io.iohk.atala.prism.app.core.PrismApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_new_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- SPECIAL META DATA FOR ACUANT SDK -->
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode,face"
            tools:replace="android:value" />

        <activity
            android:theme="@style/AppTheme.NoActionBar.FullScreen"
            android:name="io.iohk.atala.prism.app.neo.ui.launch.LaunchActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar.FullScreen"
            android:name="io.iohk.atala.prism.app.neo.ui.onboarding.OnBoardingNavActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.iohk.atala.prism.app.ui.main.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="io.iohk.atala.prism.app.ui.UnlockActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="io.iohk.atala.prism.app.ui.main.settings.WebTermsAndConditionsActivity"
            android:theme="@style/mytransparent.windowNoTitle" />
        <activity
            android:name="io.iohk.atala.prism.app.ui.QrCodeScannerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.iohk.atala.prism.app.ui.WebViewActivity"
            android:screenOrientation="portrait" />

        <activity
            android:theme="@style/AppTheme.NoActionBar.FullScreen"
            android:name="io.iohk.atala.prism.app.ui.interctivedemo.InteractiveDemoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="io.iohk.atala.prism.app.ui.payid.PayIdObtainingNavActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="io.iohk.atala.prism.app.ui.idverification.IdVerificationNavActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="io.iohk.cvp.fileprovider"
            android:exported="false"
            android:enabled="true"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <service android:name="io.iohk.atala.prism.app.core.ConnectorListenerService"/>

    </application>


</manifest>