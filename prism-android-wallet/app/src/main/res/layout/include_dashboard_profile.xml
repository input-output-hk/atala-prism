<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:iohk="http://schemas.android.com/tools">
    <data>
        <variable
            name="totalOfNotifications"
            type="Integer" />
        <variable
            name="profileName"
            type="String" />
        <variable
            name="profileImage"
            type="android.graphics.Bitmap" />
        <variable
            name="payIdName"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_bg_1"
            android:orientation="vertical"
            android:paddingHorizontal="34dp"
            android:paddingVertical="27dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_default_profile"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    iohk:bitmap="@{profileImage}"
                    iohk:failImage="@{@drawable/ic_default_profile}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="19dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/include_dashboard_profile_hello"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{ profileName == null ? @string/missing_data_default_text : profileName}"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        tools:text="@string/missing_data_default_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/view_profile_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton.NoPadding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/include_dashboard_profile_view_profile"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:rippleColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/notifications_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Small.Aqua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@{totalOfNotifications == null || totalOfNotifications == 0 ? @string/include_dashboard_profile_no_notifications_text : @string/include_dashboard_profile_notifications_text(totalOfNotifications)}" />
            <View
                iohk:visible="@{payIdName != null}"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="10dp"
            android:translationZ="10dp"
            app:cardCornerRadius="10dp"
            iohk:visible="@{payIdName != null}"
            android:id="@+id/pay_id_container"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="34dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" >
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginEnd="9dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_pay_id_aqua_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textColor="@color/grey_3"
                        android:textSize="12dp"
                        android:text="@string/include_dashboard_profile_your_pay_id_name"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="2sp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="2sp"
                        android:autoSizePresetSizes="1sp"
                        app:autoSizeStepGranularity="1sp"
                        android:autoSizeMaxTextSize="16sp"
                        app:autoSizeMaxTextSize="16sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:text="@{@string/pay_id_mask(payIdName)}"
                        tools:text="JohnSmith$atalamirror.iolkdjdkfjkdslfskldsklfj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                    android:layout_gravity="center_vertical"
                    app:tint="@color/atala_red_text_color"
                    android:src="@drawable/arrow_right_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>