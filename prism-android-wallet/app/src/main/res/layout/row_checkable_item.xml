<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:iohk="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="text"
            type="String" />

        <variable
            name="isChecked"
            type="Boolean" />

        <variable
            name="iconSrc"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:onClick="@{onClick}"
        app:strokeColor="@color/colorPrimary"
        android:clickable="true"
        app:strokeWidth="@{isChecked ? @dimen/dp_1 : @dimen/dp_0}"
        app:cardElevation="20dp"
        android:layout_marginBottom="13dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@{iconSrc}"
                iohk:visible="@{iconSrc != null}"
                android:layout_marginEnd="14dp"
                android:layout_gravity="center_vertical"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_gravity="center_vertical"
                android:id="@+id/text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/blueGrey"
                android:textSize="16sp"
                android:text="@{text}"
                tools:text="Day / Month / Year (Default)" />

            <CheckBox
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:checked="@{isChecked}"
                android:id="@+id/check_box"
                android:button="@drawable/bg_custom_radio_button_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>