<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingHorizontal="32dp"
        android:orientation="vertical"
        android:id="@+id/last_activities_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/include_dashboard_last_activity_text"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/activity_log_button"
                android:enabled="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.XSmall.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:text="@string/include_dashboard_last_activity_activity_log" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/no_activity_image"
            android:layout_marginBottom="42dp"
            android:src="@drawable/ic_no_activity"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="25dp"
            android:visibility="visible"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:id="@+id/activities_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>
