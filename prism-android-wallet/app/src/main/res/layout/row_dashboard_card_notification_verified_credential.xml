<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        android:translationZ="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="5dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="15sp"
                android:textColor="@color/dashboard_notification_card_title_text_color"
                android:text="@string/row_dashboard_card_notification_verified_credential_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="10dp"
                htmlText="@{@string/row_dashboard_card_notification_verified_credential_text}"
                android:textSize="12sp"
                android:textColor="@color/dashboard_notification_card_text_color"
                android:text="@string/row_dashboard_card_notification_verified_credential_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/select_button"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginTop="25dp"
                app:cardElevation="0dp"
                android:translationZ="0dp"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="#1ED69E"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lights_effect"
                    android:translationX="67dp" />
                <LinearLayout
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginVertical="6dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_verified_credential_card_notification"
                        android:layout_marginEnd="12dp"
                        android:layout_width="29dp"
                        android:layout_height="29dp"/>
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="@string/row_dashboard_card_notification_verified_credential_button_text_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:text="@string/row_dashboard_card_notification_verified_credential_button_text_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <ImageView
                        android:src="@drawable/ic_dashboard_notification_arrow_right"
                        android:layout_gravity="center_vertical"
                        android:layout_width="8dp"
                        android:layout_height="13dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <ImageView
            android:id="@+id/remove_button"
            android:layout_margin="10dp"
            android:layout_gravity="end"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close_gray"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </androidx.cardview.widget.CardView>
</layout>