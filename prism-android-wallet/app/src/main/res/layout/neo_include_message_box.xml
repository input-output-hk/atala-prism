<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iohk="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bgColor"
            type="Integer" />

        <variable
            name="textColor"
            type="Integer" />

        <variable
            name="text"
            type="String" />

        <variable
            name="iconSrc"
            type="android.graphics.drawable.Drawable" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:outlineAmbientShadowColor="@android:color/transparent"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:cardBackgroundColor="@{bgColor == null ? @color/message_box_default_background_color : bgColor}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:tint="@{textColor == null ? @color/message_box_default_on_background_color : textColor}"
                android:layout_gravity="center_vertical"
                iohk:visible="@{iconSrc != null}"
                android:src="@{iconSrc}"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:textColor="@{textColor == null ? @color/message_box_default_on_background_color : textColor}"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_marginStart="12dp"
                android:text="@{text}"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>