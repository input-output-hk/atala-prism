<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:iohk="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="io.iohk.atala.prism.app.ui.payid.step1.PayIdSelectIdentityCredentialViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            iohk:visible="@{!viewModel.showNoIdentityCredentialsMessage}"
            android:id="@+id/credentials_recycler_view"
            app:layout_constraintTop_toTopOf="parent"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingHorizontal="20dp"
            iohk:visible="@{viewModel.showNoIdentityCredentialsMessage}"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/credentials_recycler_view"
            app:layout_constraintEnd_toEndOf="@+id/credentials_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                app:title="@{@string/fragment_pay_id_select_identity_credential_instructions}"
                layout="@layout/row_header_style_b"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@mipmap/ic_no_id_credential"
                android:src="@mipmap/ic_no_id_credential"
                android:layout_width="98dp"
                android:layout_height="64dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="13dp"
                android:textColor="@color/grey_4"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="@string/fragment_pay_id_select_identity_credential_no_id_credential_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="24dp"
                android:id="@+id/verify_id_button"
                app:cornerRadius="50dp"
                android:text="@string/fragment_pay_id_select_identity_credential_no_id_credential_button_text"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_button"
            android:enabled="@{viewModel.canContinue}"
            android:onClick="@{ v -> viewModel.next()}"
            app:cornerRadius="50dp"
            android:text="@string/fragment_pay_id_select_identity_credential_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>