<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="isChecked"
            type="Boolean" />
    </data>


    <com.google.android.material.card.MaterialCardView
        app:strokeColor="@color/color_row_checkable_credential_stroke"
        android:clickable="true"
        app:strokeWidth="@{isChecked ? @dimen/dp_1 : @dimen/dp_0}"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingVertical="15dp"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <CheckBox
                android:checked="@{isChecked}"
                android:layout_marginEnd="17dp"
                android:layout_centerVertical="true"
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/credential_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="11dp"
                android:src="@drawable/ic_school_degree"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/credential_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/education"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/credential_name"
                app:layout_constraintEnd_toStartOf="@+id/check_box"
                app:layout_constraintStart_toEndOf="@+id/credential_logo"
                app:layout_constraintTop_toTopOf="@id/credential_logo" />

            <TextView
                android:id="@+id/credential_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="13sp"
                android:text="hola"
                android:textColor="@color/onSurfaceMedium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/check_box"
                app:layout_constraintStart_toEndOf="@+id/credential_logo"
                app:layout_constraintTop_toBottomOf="@+id/credential_type" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>