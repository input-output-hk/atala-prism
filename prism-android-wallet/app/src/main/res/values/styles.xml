<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/atala_blue</item>
        <item name="colorPrimaryVariant">@color/lightRed</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/blueGrey</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorError">@color/colorPrimary</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
        <item name="checkboxStyle">@style/CustomCheckbox</item>

        <item name="textInputStyle">@style/CustomOutlinedBox</item>
        <!-- Uncomment when fonts are available
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        -->

        <item name="android:ambientShadowAlpha">0.05</item>
        <item name="android:spotShadowAlpha">0.05</item>

        <!-- Style over text on toolbar-->
        <item name="actionMenuTextColor">@color/grey_4</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow_toolbar</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="dateTextViewStyle">@style/DateTextViewStyle</item>
    </style>

    <style name="DateTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="secondAgoText">@string/date_text_view_second_ago_text</item>
        <item name="secondsAgoText">@string/date_text_view_seconds_ago_text</item>
        <item name="minuteAgoText">@string/date_text_view_minute_ago_text</item>
        <item name="minutesAgoText">@string/date_text_view_minutes_ago_text</item>
        <item name="hourAgoText">@string/date_text_view_hour_ago_text</item>
        <item name="hoursAgoText">@string/date_text_view_hours_ago_text</item>
    </style>
    <!-- Action bar theme. -->
    <style name="CustomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="background">@android:color/white</item>
        <item name="backgroundStacked">@android:color/white</item>
        <item name="backgroundSplit">@android:color/white</item>
    </style>

    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CustomOutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blueGrey</item>
        <item name="hintTextColor">@color/blueGrey</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="mytransparent.windowNoTitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="chip_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/atala_red_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_top_corners_white</item>
    </style>

    <style name="WordsTextInputLayoutStyle">
        <item name="chipsBackgroundColor">@color/chip_bg_color</item>
        <item name="chipsTextColor">@color/atala_red_text_color</item>
        <item name="chipsCloseIconTint">@color/atala_red_text_color</item>
        <item name="chipsCloseIcon">@drawable/chip_close_icon</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Small" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:inset">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="minHeight">0dp</item>
        <item name="background">@color/black</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Medium" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:inset">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="minHeight">0dp</item>
        <item name="background">@color/black</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Small.Aqua" parent="Widget.MaterialComponents.Button.OutlinedButton.Small">
        <item name="strokeColor">@color/atala_aqua</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/atala_aqua</item>
        <item name="rippleColor">@color/atala_aqua</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.XSmall" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:inset">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="minHeight">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.XSmall.Primary" parent="Widget.MaterialComponents.Button.OutlinedButton.XSmall">
        <item name="strokeColor">@color/mtrl_text_btn_text_color_selector</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/mtrl_text_btn_text_color_selector</item>
        <item name="rippleColor">?colorPrimary</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.NoPadding" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:inset">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Medium.White" parent="Widget.MaterialComponents.Button.OutlinedButton.Medium">
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="BottomNavigationView.ItemTextAppearanceActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.ItemTextAppearanceInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button.TextButton.NoPadding">
        <item name="iconPadding">0dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

</resources>
