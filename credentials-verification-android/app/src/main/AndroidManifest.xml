<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.iohk.cvp">

    <uses-permission
        android:name="android.permission.CAMERA"
        tools:ignore="ManifestOrder" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:name=".core.CvpApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_new_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".views.activities.RestoreAccountSuccessActivity"
            android:screenOrientation="portrait" />
        <activity
            android:theme="@style/AppTheme.NoActionBar.FullScreen"
            android:name=".neo.ui.launch.LaunchActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar.FullScreen"
            android:name=".neo.ui.onboarding.OnBoardingNavActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".views.activities.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".views.activities.RestoreAccountActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.UnlockActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".views.activities.TermsAndConditionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.WebTermsAndConditionsActivity"
            android:theme="@style/mytransparent.windowNoTitle" />
        <activity
            android:name=".views.activities.WalletSetupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.SeedPhraseVerificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.AccountCreatedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.QrCodeScanner"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.WebViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.braintreepayments.api.BraintreeBrowserSwitchActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="${applicationId}.braintree" />
            </intent-filter>
        </activity>
    </application>

</manifest>