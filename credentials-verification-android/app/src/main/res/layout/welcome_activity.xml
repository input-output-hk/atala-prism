<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginStart="@dimen/activity_default_side_margin"
  android:layout_marginEnd="@dimen/activity_default_side_margin"
  tools:context=".views.activities.WelcomeActivity">


  <androidx.viewpager2.widget.ViewPager2
      android:id="@+id/vp_pager"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:visibility="gone"
      app:layout_constraintBottom_toTopOf="@+id/tabDots"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="@dimen/activity_default_side_margin"
      app:layout_constraintTop_toTopOf="@+id/welcome_body_container" />

  <LinearLayout
      android:id="@+id/steps_counter"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="72dp"
      android:layout_marginTop="48dp"
      android:layout_marginEnd="72dp"
      android:layout_marginBottom="40dp"
      android:orientation="horizontal"
      android:visibility="gone"
      app:layout_constraintBottom_toTopOf="@+id/welcome_body_container"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

      <TextView
          android:id="@+id/step1_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="1"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="16sp" />

      <View
          android:id="@+id/step1_dot"
          android:layout_width="5dp"
          android:layout_height="5dp"
          android:background="@drawable/dot" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

      <TextView
          android:id="@+id/step2_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="2"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="16sp" />

      <View
          android:id="@+id/step2_dot"
          android:layout_width="5dp"
          android:layout_height="5dp"
          android:background="@drawable/dot"
          android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

      <TextView
          android:id="@+id/step3_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="3"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="16sp" />

      <View
          android:id="@+id/step3_dot"
          android:layout_width="5dp"
          android:layout_height="5dp"
          android:background="@drawable/dot"
          android:visibility="gone" />
    </LinearLayout>
  </LinearLayout>

  <com.google.android.material.tabs.TabLayout
      android:id="@+id/tabDots"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/activity_default_side_margin"
      android:visibility="gone"
      app:layout_constraintBottom_toTopOf="@+id/welcomeButtonsContainer"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:tabGravity="center"
      app:tabIndicatorHeight="0dp"
      app:tabBackground="@drawable/tab_selector" />

  <LinearLayout
      android:id="@+id/welcomeButtonsContainer"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:orientation="horizontal"
      android:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <Button
        android:id="@+id/view_pager_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="32dp"
        android:text="@string/create_account"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textColor="@android:color/white"
        app:cornerRadius="32dp" />

    <Button
        android:id="@+id/restore_account_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:text="@string/restore_account"
        android:textAllCaps="false"
        android:visibility="gone"
        app:cornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:text="@string/get_started"
        android:textAllCaps="false"
        android:visibility="visible"
        app:cornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
  </LinearLayout>

  <RelativeLayout
      android:id="@+id/welcome_body_container"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@+id/welcomeButtonsContainer"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/steps_counter">



    <include
        android:id="@+id/welcome_view"
        layout="@layout/welcome_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />


  </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>