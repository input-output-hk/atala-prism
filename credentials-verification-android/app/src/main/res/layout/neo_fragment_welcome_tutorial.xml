<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:iohk="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="io.iohk.cvp.neo.ui.onboarding.welcometutorial.WelcomeTutorialViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginStart="@dimen/activity_default_side_margin"
        android:layout_marginEnd="@dimen/activity_default_side_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_pager"
            iohk:currentItem="@={viewModel.step}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/activity_default_side_margin"
            app:layout_constraintBottom_toTopOf="@+id/tabDots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabDots"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_default_side_margin"
            app:layout_constraintBottom_toTopOf="@+id/createAccountButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />

        <Button
            android:id="@+id/createAccountButton"
            android:onClick="@{(view)-> viewModel.onCreateAccountButtonTaped()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/restoreAccountBtn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginBottom="32dp"
            android:text="@string/create_account"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="32dp" />

        <Button
            iohk:visible="@{viewModel.step == (viewModel.TOTAL_STEPS - 1)}"
            android:id="@+id/restoreAccountBtn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/white"
            android:text="@string/restore_account"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            app:cornerRadius="32dp"
            android:onClick="@{(view)-> viewModel.onRestoreAccountButtonTaped()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
